---
import Layout from "../../layouts/Layout.astro";
import { allPlaylists, playlists, songs } from "@/lib/data";
import PlayListItemCard from '@/components/PlayListItemCard.astro'

const { id } = Astro.params

const playlist = allPlaylists.find(playlist => playlist.id === id)
const playListSongs = songs.filter(song => song.albumId === playlist?.albumId)
---

<Layout title="Spotify Clone" >
<div id="playlist-container" class="relative transition-all duration-1000 bg-green-400">
    <!-- <-- <PageHeader /> -->
    <div class="relative z-10 px-6 pt-10">
        <!-- <Greetings/> -->
        <h1 class="text-4xl font-bold">Good Nights</h1>
        <div class="flex flex-wrap mt-6 gap-4">
            {
                playlists.map(playlists => <PlayListItemCard playlist={playlists}/>)
            }
        </div>
    </div>

    <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"></div>
</div>
</Layout>

